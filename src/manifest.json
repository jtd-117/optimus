{
    "manifest_version": 3,
    "name": "optimus",
    "description": "A Chrome extension that serves as combined pomodoro timer and website blocker.",
    "version": "1.0",
    "author": [
        {
            "name": "Jude Thaddeau Data",
            "email": "78249269+jtd-117@users.noreply.github.com"
        }
    ],

    "permissions": [],

    "icons": {
        "16": "./logos/optimus-logo-16.png",
        "32": "./logos/optimus-logo-32.png",
        "48": "./logos/optimus-logo-48.png",
        "128": "./logos/optimus-logo-128.png"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./logos/optimus-logo-16.png",
            "32": "./logos/optimus-logo-32.png",
            "48": "./logos/optimus-logo-48.png",
            "128": "./logos/optimus-logo-128.png"
        }
    },

    "options_page": "options.html",

    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["*://*/*"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    }
}
